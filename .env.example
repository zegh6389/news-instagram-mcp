# Instagram API Configuration
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
INSTAGRAM_SESSION_FILE=instagram_session.json

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
GEMINI_API_KEY=your_gemini_api_key

# Database Configuration
DATABASE_URL=sqlite:///news_instagram.db

# News Sources Configuration
NEWS_SOURCES_CONFIG=config/news_sources.yaml
INSTAGRAM_CONFIG=config/instagram_config.yaml
TEMPLATE_CONFIG=config/template_config.yaml

# Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_DELAY=2
MAX_RETRIES=3

# Processing Configuration
MAX_CAPTION_LENGTH=2200
IMAGE_MAX_WIDTH=1080
IMAGE_MAX_HEIGHT=1350

# Publishing Configuration
POST_SCHEDULE_INTERVAL=3600
MAX_POSTS_PER_DAY=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/news_instagram.log
